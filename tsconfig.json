{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "moduleResolution": "Node",
    "jsx": "react-jsx",
    "strict": false,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./frontend-eterna/src/*"]
    },
    "types": ["node", "vite/client"]
  },
  "include": [
    "frontend-eterna/src",
    "backend-eterna/api"
  ]
}
